<odoo>
    <record id="view_grupo_form" model="ir.ui.view">
        <field name="name">grupo.form</field>
        <field name="model">escuela.grupo</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="descripcion"/>
                        <field name="modulo_profesional"/>
                        <field name="curso"/>
                        <field name="estudiante_ids" widget="one2many_list"/>
                        <field name="asignatura_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
